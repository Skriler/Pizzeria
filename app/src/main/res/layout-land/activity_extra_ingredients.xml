<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ExtraIngredientsActivity">

    <TextView
        android:id="@+id/tvOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textSize="26sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="@string/select_extra_ingredients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPizzaSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="@string/select_ingredients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderDetails" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPizzaSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/cbBroccoli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/broccoli" />

            <CheckBox
                android:id="@+id/cbPotato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/potato" />

            <CheckBox
                android:id="@+id/cbMushroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mushroom" />

            <CheckBox
                android:id="@+id/cbBlackOlives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/black_olives" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/cbAnchovies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anchovies" />

            <CheckBox
                android:id="@+id/cbEggplant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eggplant" />

            <CheckBox
                android:id="@+id/cbCapsicum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capsicum" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/black"
        android:text="@string/submit"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>